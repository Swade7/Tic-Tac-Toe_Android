<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TicTacToe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="TicTacToeButtonPortrait">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:background">@color/clear</item>
        <item name="android:color">@color/clear</item>
        <item name="android:colorButtonNormal">@color/clear</item>
        <item name="android:text">@string/none</item>
        <item name="android:textSize">96sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

        <!-- https://stackoverflow.com/questions/6041514/button-text-vertical-alignment-is-off-in-android
            User: markussvensson -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:insetRight">-10dp</item>
    </style>

    <style name="TicTacToeButtonLand">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:background">@color/clear</item>
        <item name="android:color">@color/clear</item>
        <item name="android:colorButtonNormal">@color/clear</item>
        <item name="android:text">@string/none</item>
        <item name="android:textSize">72sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

        <!-- https://stackoverflow.com/questions/6041514/button-text-vertical-alignment-is-off-in-android
            User: markussvensson -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">15sp</item>
        <item name="paddingEnd">0sp</item>
        <item name="android:insetRight">-10dp</item>
    </style>

    <style name="Theme.TicTacToe" parent="Base.Theme.TicTacToe" />
</resources>